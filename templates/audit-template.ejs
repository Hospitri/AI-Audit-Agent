<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Hospitri — Listing Audit</title>
  <style>
    body { font-family: system-ui, Arial, sans-serif; margin: 32px; color: #111; }
    h1 { margin: 0 0 4px; font-size: 28px; }
    .subtitle { color: #444; margin: 0 0 16px; font-size: 16px; }
    .score { font-size: 40px; font-weight: 700; margin: 12px 0 24px; }
    .grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 16px; }
    .card { border: 1px solid #eee; border-radius: 10px; padding: 14px; }
    .title { font-weight: 600; margin-bottom: 6px; text-transform: capitalize; }
    ul { margin: 8px 0 0 18px; }
    .muted { color: #666; font-size: 12px; margin-top: 24px; }
  </style>
</head>
<body>
  <h1>Hospitri — Listing Audit</h1>
  <% const listingTitle = (audit && (audit.listing_title || (audit.meta && audit.meta.title))) || ''; %>
  <% if (listingTitle) { %>
    <div class="subtitle"><%= listingTitle %></div>
  <% } %>

  <div class="score">Overall: <%= audit.overall_score %></div>

  <h2>Category breakdown</h2>
  <div class="grid">
    <% for (const [k, v] of Object.entries(audit.category_breakdown || {})) { %>
      <div class="card">
        <div class="title"><%= k %></div>
        <div>Score: <b><%= v.numeric %></b> — Grade: <b><%= v.grade %></b></div>
        <div>What works: <%= v.what_works %></div>
        <div>Improve: <%= v.what_to_improve %></div>
      </div>
    <% } %>
  </div>

  <h2>Quick wins</h2>
  <ul>
    <% (audit.quick_wins || []).forEach(q => { %>
      <li>
        <b><%= q.action %></b>
        — Effort: <%= q.effort %>
        , Impact: <%= q.potential_uplift %>
        <% if (q.potential_uplift_type) { %> (<%= q.potential_uplift_type %>)<% } %>
      </li>
    <% }) %>
  </ul>

  <h2>Pro tip</h2>
  <p><%= audit.pro_tip %></p>

  <p class="muted">Prepared for <%= name %> · Generated by Hospitri</p>
</body>
</html>
