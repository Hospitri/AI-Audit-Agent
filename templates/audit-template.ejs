<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Hospitri — Audit</title>

  <!-- Instrument Sans (fallback a system sans si no carga) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">

  <style>
    :root{
      --panel: #F6F5EF;
      --ink: #111111;
      --muted: #666666;
      --border: #0f0f0f;
      --green-dark: #064541;
      --green-light: #E1F67A;
    }
    * { box-sizing: border-box; }
    html, body { height: 100%; }
    body {
      margin: 0; padding: 20px;
      background: #fff; color: var(--ink);
      font-family: "Instrument Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
      font-size: 13.5px; /* compacto para 1 página */
      line-height: 1.35;
    }
    .sheet {
      max-width: 740px; /* más angosto que antes */
      margin: 0 auto;
      background: var(--panel);
      border: 2px solid var(--border);
      border-radius: 16px;
      padding: 20px 22px 18px;
      /* mini “zoom out” manteniendo proporciones */
      transform: scale(0.95);
      transform-origin: top center;
    }

    /* Header */
    .header { text-align: center; margin-bottom: 8px; }
    .logo-icon {
      width: 44px; height: 44px; border-radius: 12px; display: inline-block; margin-bottom: 6px;
    }
    .wordmark {
      display: block;
      height: 20px; /* compacto */
      margin: 0 auto 6px auto;
    }
    .kicker {
      margin: 0 0 6px 0;
      color: var(--muted);
      font-size: 12.5px;
    }
    .listing-title {
      font-weight: 700;
      font-size: 16px;
      margin: 4px 0 6px 0;
      text-wrap: balance;
    }

    /* Score */
    .score-wrap {
      display: flex; align-items: center; justify-content: center;
      gap: 8px; margin: 6px 0 14px;
    }
    .score-badge {
      font-size: 28px; font-weight: 800;
      color: #fff; background: var(--green-dark);
      padding: 4px 14px; border-radius: 999px;
      line-height: 1.05;
    }
    .score-label { color: var(--muted); font-size: 12px; }

    /* Sections */
    h2 {
      font-weight: 800;
      font-size: 14px; margin: 12px 0 8px;
      color: var(--green-dark);
    }
    .grid {
      display: grid; grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 10px;
    }
    .card {
      background: #fff; border: 1px solid #e7e7e7; border-radius: 10px;
      padding: 10px;
    }
    .title {
      font-weight: 700; margin-bottom: 3px; text-transform: capitalize;
      color: var(--green-dark);
    }
    .kv { font-size: 12.5px; margin-top: 2px; }
    .muted { color: var(--muted); font-size: 11.5px; }

    /* Quick wins */
    .wins { margin: 4px 0 8px; padding-left: 18px; }
    .wins li { margin: 4px 0; }
    .chip {
      display: inline-block; font-size: 11px; padding: 1px 7px;
      border-radius: 999px; border: 1px solid #d9d9d9; background: #fff;
      margin-left: 6px;
    }
    .chip--impact { background: var(--green-light); border-color: #cfe56d; }

    .legend {
      font-size: 11.5px; color: var(--muted);
      background: #fff; border: 1px dashed #d9d9d9;
      padding: 6px 8px; border-radius: 8px; margin-top: 6px;
    }

    .footer {
      text-align: center; margin-top: 14px; color: var(--muted);
      font-size: 11.5px;
    }

    /* Evitar saltos raros en tarjeta */
    .card, .wins, .legend { page-break-inside: avoid; }
  </style>
</head>
<body>
  <div class="sheet">
    <div class="header">
      <!-- icono cuadrado (si querés quitarlo, borralo) -->
      <img class="logo-icon" src="https://framerusercontent.com/images/m3toUFui8qBDtUIrTvF9mXpuUM.svg" alt="Hospitri icon" />
      <!-- wordmark en texto -->
      <img class="wordmark" src="https://framerusercontent.com/images/VH0v93fEyLHo67ezcFOj3c7Uo.svg" alt="hospitri" />
      <div class="kicker">Here’s your free audit!</div>

      <% const listingTitle = (audit && (audit.listing_title || (audit.meta && audit.meta.title))) || ''; %>
      <% if (listingTitle) { %>
        <div class="listing-title"><%= listingTitle %></div>
      <% } %>
    </div>

    <div class="score-wrap">
      <div class="score-badge"><%= audit.overall_score %></div>
      <div class="score-label">Overall score</div>
    </div>

    <h2>Category breakdown</h2>
    <div class="grid">
      <% for (const [k, v] of Object.entries(audit.category_breakdown || {})) { %>
        <div class="card">
          <div class="title"><%= k %></div>
          <div class="kv">Score: <b><%= v.numeric %></b> — Grade: <b><%= v.grade %></b></div>
          <div class="kv">What works: <%= v.what_works %></div>
          <div class="kv">Improve: <%= v.what_to_improve %></div>
        </div>
      <% } %>
    </div>

    <h2>Quick wins</h2>
    <ul class="wins">
      <% (audit.quick_wins || []).forEach(q => { %>
        <li>
          <b><%= q.action %></b>
          <span class="chip">Effort: <%= q.effort %></span>
          <span class="chip chip--impact">Impact: <%= q.potential_uplift %><% if (q.potential_uplift_type) { %> (<%= q.potential_uplift_type %>)<% } %></span>
        </li>
      <% }) %>
    </ul>

    <div class="legend">
      Legend: <b>$</b> = revenue impact, <b>⚡</b> = guest-experience impact. More symbols = higher impact (e.g., <b>$$$</b>, <b>⚡⚡</b>).
    </div>

    <h2>Pro tip</h2>
    <p class="kv"><%= audit.pro_tip %></p>

    <div class="footer">© 2025 Hospitri LLC — Built with ♥ in Puerto Rico</div>
  </div>
</body>
</html>
